        <script src="~/js/ns.min.js" asp-append-version="true" type="module"></script>
        <script src="~/js/views.min.js" asp-append-version="true" type="module"></script>
        <script src="~/js/viewsarea_admin.min.js" asp-append-version="true" type="module"></script>
        <script src="~/js/page.min.js" asp-append-version="true" type="module"></script>
    </environment>*@

    @RenderSection("Scripts", required: false)
</body>
</html>
